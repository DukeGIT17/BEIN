@model SignInAndRegistrationViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/sign-in css/sign-in.css">
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<body>
    <div class="container">
        <div class="form-box login">
            <form id="signin-form" asp-action="SignIn" method="post" >
                <h1>Login</h1>
                <div asp-validation-summary="All"></div>
                <div class="input-box">
                    <input asp-for="SignInModel.Email" placeholder="Email" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input asp-for="SignInModel.Password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <div class="forgot-link">
                    <a href="#">Forgot Password?</a>
                </div>
                <button type="button" class="btn">Login</button>
                <p>or login with social media</p>
                <div class="social-icons">
                    <a href="#"><i class='bx bxl-google'></i></a>
                    <a href="#"><i class='bx bxl-facebook'></i></a>
                    <a href="#"><i class='bx bxl-github'></i></a>
                    <a href="#"><i class='bx bxl-linkedin'></i></a>
                </div>
            </form>
        </div>

        <div class="form-box register">
            <form id="registration-form" asp-action="Register" method="post" >
                <h1>Registration</h1>
                <div asp-validation-summary="All"></div>
                <div class="input-box">
                    <input asp-for="RegistrationModel.Name" placeholder="Name" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input asp-for="RegistrationModel.Surname" placeholder="Surname" required>
                    <i class='bx bxs-user'></i>
                </div>
                <div class="input-box">
                    <input asp-for="RegistrationModel.Email" placeholder="Email" required> 
                    <i class='bx bxs-envelope'></i>
                </div>
                <div class="input-box">
                    <input asp-for="RegistrationModel.Password" placeholder="Password" required>
                    <i class='bx bxs-lock-alt'></i>
                </div>
                <button type="button" class="btn">Register</button>
                <p>or register with social media</p>
                <div class="social-icons">
                    <a href="#"><i class='bx bxl-google'></i></a>
                    <a href="#"><i class='bx bxl-facebook'></i></a>
                    <a href="#"><i class='bx bxl-github'></i></a>
                    <a href="#"><i class='bx bxl-linkedin'></i></a>
                </div>
            </form>
        </div>

        <div class="toggle-box">
            <div class="toggle-panel toggle-left">
                <h1>Hello, Welcome!</h1>
                <p>Don't have an account?</p>
                <button class="btn register-btn">Register</button>
            </div>
            <div class="toggle-panel toggle-right">
                <h1>Welcome Back!</h1>
                <p>Already have an account?</p>
                <button class="btn login-btn">Login</button>
            </div>
            <a id="tohome" asp-action="ToHome" style="display:none;"></a>
        </div>
    </div>

    <script src="~/js/sign-in js/sign-in.js"></script>
</body>