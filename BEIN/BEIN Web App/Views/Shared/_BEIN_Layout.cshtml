@using BEIN_Web_App.IClientSideServices;

@inject INavigationService NavigationService
@inject IHttpContextAccessor accessor

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - BEIN</title>

    <!-- fonts and icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />

    <!-- custom stylesheets -->
    <link rel="stylesheet" href="~/css/layout css/layout.css" />

</head>
<body>
    <header>
        <nav>
            <a asp-controller="General" asp-action="LandingPage" class="logo">
                <i class="ri-planet-line"></i>
                <span>BEIN</span>
            </a>

            <div class="nav_items">
                <ul class="nav_list">
                    <li>
                        <a asp-controller="General" asp-action="AboutUsPage">About Us</a>
                    </li>
                    <li class="sol_dd">
                        <a class="solutions">
                            Solutions
                            <i class="ri-arrow-down-s-line"></i>
                        </a>
                        <div class="dd-content">
                            @foreach (var sector in await NavigationService.GetAllSectorsAsync()) 
                            {
                                <a asp-controller="Sectors" asp-action="GetSector" asp-route-sectorName="@sector.Title">
                                    <i class="fa-solid fa-caret-right"></i>
                                    @sector.Title
                                </a>
                            }
                        </div>
                    </li>
                    <li><a asp-controller="General" asp-action="ContactUsPage">Contact Us</a></li>
                </ul>

                <div class="nav_actions">
                    <div class="search_container">
                        <input type="search" placeholder="Search..." class="search_input">
                        <button class="search_btn">
                            <i class="ri-search-line"></i>
                        </button>
                    </div>

                    @if (accessor.HttpContext!.User.Identity is not null && accessor.HttpContext.User.Identity.IsAuthenticated) 
                    {
                        <div class="signed-in">
                            <div id="username">
                                @accessor.HttpContext.User.Claims.Where(claim => claim.Type.Equals("username", StringComparison.OrdinalIgnoreCase)).First().Value  
                            </div>
                            <div id="user-menu">
                                <a class="profile">
                                    <i class="fa-regular fa-user"></i>
                                    My Profile
                                </a>
                                <a class="bookmarks">
                                    <i class="fa-regular fa-bookmark"></i>
                                    My Bookmarks
                                </a>
                                @if (accessor.HttpContext.User.Claims.Where(claim => claim.Type.EndsWith("role")).First().Value.Equals("Admin", StringComparison.OrdinalIgnoreCase))
                                {
                                    <hr>
                                    <a asp-controller="AdminFunctions" asp-action="AddSoftware" class="add-software">
                                        <i class="fa-solid fa-plus"></i>
                                        Add Software
                                    </a>
                                    <a href="#" class="remove-software">
                                        <i class="fa-solid fa-minus"></i>
                                        Remove/Modify Software
                                    </a>
                                }
                                <hr>
                                <a asp-controller="Account" asp-action="SignOut" class="signout">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    Sign Out
                                </a>
                            </div>
                        </div>
                    }
                    else 
                    {
                        <div class="nav_signin">
                            <a asp-controller="Account" asp-action="SignInOrRegister">
                                <i class="acc_icon ri-lock-line"></i>
                                Sign In
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div id="nav_toggle">
                <i class="ri-menu-line"></i>
            </div>
        </nav>
    </header>

    <div id="side-bar">
        <div class="nav_items">
            <ul class="nav_list">
                <li>
                    <a asp-controller="General" asp-action="AboutUsPage">About Us</a>
                </li>
                <li class="sol_dd">
                    <a class="solutions">
                        Solutions
                        <i class="ri-arrow-down-s-line"></i>
                    </a>
                    <div class="dd-content">
                        @foreach (var sector in await NavigationService.GetAllSectorsAsync())
                        {
                            <a asp-controller="Sectors" asp-action="GetSector" asp-route-sectorName="@sector.Title">
                                <i class="fa-solid fa-caret-right"></i>
                                @sector.Title
                            </a>
                        }
                    </div>
                </li>
                <li>
                    <a asp-controller="General" asp-action="ContactUsPage">Contact Us</a>
                </li>
            </ul>

            <div class="nav_actions">
                <div class="search_container">
                    <input type="search" placeholder="Search..." class="search_input">
                    <button class="search_btn">
                        <i class="ri-search-line"></i>
                    </button>
                </div>

                @if (accessor.HttpContext!.User.Identity is not null && accessor.HttpContext.User.Identity.IsAuthenticated)
                {
                    <div class="signed-in">
                        <div id="username-sb">
                            Lukhanyo Mayekiso
                        </div>
                        <div id="user-menu-sb">
                            <a class="profile">
                                <i class="fa-regular fa-user"></i>
                                My Profile
                            </a>
                            <a class="bookmarks">
                                <i class="fa-regular fa-bookmark"></i>
                                My Bookmarks
                            </a>
                            <hr>
                            <a asp-controller="Account" asp-action="SignOut" class="signout">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                Sign Out
                            </a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="nav_signin">
                        <a asp-controller="Account" asp-action="SignInOrRegister">
                            <i class="acc_icon ri-lock-line"></i>
                            Sign In
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div id="footer-container">
            <div id="footer-content">
                <div id="footer-brand">
                    <a asp-controller="General" asp-action="LandingPage" class="logo">
                        <i class="ri-planet-line"></i>
                        <span>BEIN</span>
                    </a>
                    <p>BEIN, the Built Environment Innovative Network for professionals in built environment fields.</p>
                </div>

                <div id="footer-links">
                    <div class="links-group">
                        <h4>Company</h4>
                        <ul>
                            <li><a asp-controller="General" asp-action="AboutUsPage">About Us</a></li>
                            <li><a asp-controller="General" asp-action="AboutUsPage">Careers</a></li>
                            <li><a asp-controller="General" asp-action="AboutUsPage">Press</a></li>
                        </ul>
                    </div>

                    <div class="links-group">
                        <h4>Resources</h4>
                        <ul>
                            <li><a href="#">Blog</a></li>
                            <li><a href="#">Documentation</a></li>
                            <li><a href="#">Help Center</a></li>
                        </ul>
                    </div>

                    <div class="links-group">
                        <h4>Legal</h4>
                        <ul>
                            <li><a href="#">Privacy Policy</a></li>
                            <li><a href="#">Terms of Service</a></li>
                            <li><a href="#">Security</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div id="footer-bottom">
                <p>&copy; 2024 BEIN. All rights reserved.</p>
                <div id="footer-socials">
                    <a href="#" aria-label="Twitter"><i class="ri-twitter-fill"></i></a>
                    <a href="#" aria-label="LinkedIn"><i class="ri-linkedin-fill"></i></a>
                    <a href="#" aria-label="GitHub"><i class="ri-github-fill"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/js/layout js/layout.js"></script>
</body>
</html>
