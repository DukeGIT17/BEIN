@model Sector
@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="~/css/general pages css/landing_page.css" />
<link rel="stylesheet" href="~/css/sectors css/sectors.css" />

<section id="introduction" style="padding: var(--section-spacing) 0; background-color: #f8fafc;">
    <div class="container">
        <h2 class="section__title">@Model.Title</h2>
        <p class="section__description">@Model.Description</p>

        <div class="documentation__grid">
            @foreach (var cardInfo in Model.SectorInformation!.CardInformation!)
            {
                <div class="documentation__card">
                    <i class="ri-book-open-line documentation__icon"></i>
                    <h3>@cardInfo.Header</h3>
                    <p>@cardInfo.Information</p>
                </div>
            }

            @* <div class="documentation__card">
                <i class="ri-tools-line documentation__icon"></i>
                <h3>Advanced Techniques</h3>
                <p>In-depth tutorials on advanced modeling, rendering, and design optimization techniques.</p>
            </div>
            <div class="documentation__card">
                <i class="ri-team-line documentation__icon"></i>
                <h3>Collaboration Workflows</h3>
                <p>Best practices for team collaboration, file sharing, and project management in architectural software.</p>
            </div> *@
        </div>
    </div>
</section>

<section class="why-choose" style="padding: var(--section-spacing) 0;">
    <div class="container">
        <h2 class="section__title">@Model.Title Principles</h2>
        <p class="section__description">
            Empower your architectural and engineering projects with cutting-edge technology designed to enhance productivity and creativity.
        </p>

        <div class="features__grid">
            @foreach (var principle in Model.SectorInformation.SectorPrinciples!)
            {
                <div class="feature__card">
                    <i class="ri-lightbulb-line feature__icon"></i>
                    <h3>@principle.Principle</h3>
                    <p>@principle.Description</p>
                </div>
            }
            @* <div class="feature__card">
                <i class="ri-lightbulb-line feature__icon"></i>
                <h3>Innovation-Driven</h3>
                <p>Continuously updated software that incorporates the latest technological advancements in design and engineering.</p>
            </div>
            <div class="feature__card">
                <i class="ri-time-line feature__icon"></i>
                <h3>Efficiency Optimization</h3>
                <p>Streamline your workflow with powerful tools that reduce project completion time and improve accuracy.</p>
            </div>
            <div class="feature__card">
                <i class="ri-global-line feature__icon"></i>
                <h3>Industry Standard</h3>
                <p>Used by leading professionals worldwide, ensuring compatibility and recognition in the global market.</p>
            </div> *@
        </div>
    </div>
</section>

