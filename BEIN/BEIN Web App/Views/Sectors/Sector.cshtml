@model Sector
@{
    ViewData["Title"] = "Architecture";
}

<link rel="stylesheet" href="~/css/general pages css/landing_page.css" />

<section id="introduction" style="padding: var(--section-spacing) 0; background-color: #f8fafc;">
    <div class="container">
        <h2 class="section__title">Architecture Software Documentation</h2>
        <p class="section__description">Comprehensive guides to help you master the most powerful architectural design tools in the industry.</p>

        <div class="documentation__grid">
            <div class="documentation__card">
                <i class="ri-book-open-line documentation__icon"></i>
                <h3>Getting Started</h3>
                <p>Quick start guides for new users, including installation, basic setup, and initial project creation.</p>
            </div>
            <div class="documentation__card">
                <i class="ri-tools-line documentation__icon"></i>
                <h3>Advanced Techniques</h3>
                <p>In-depth tutorials on advanced modeling, rendering, and design optimization techniques.</p>
            </div>
            <div class="documentation__card">
                <i class="ri-team-line documentation__icon"></i>
                <h3>Collaboration Workflows</h3>
                <p>Best practices for team collaboration, file sharing, and project management in architectural software.</p>
            </div>
        </div>
    </div>
</section>

<section class="why-choose" style="padding: var(--section-spacing) 0;">
    <div class="container">
        <h2 class="section__title">Why Choose Our Software Solutions</h2>
        <p class="section__description">Empower your architectural and engineering projects with cutting-edge technology designed to enhance productivity and creativity.</p>

        <div class="features__grid">
            <div class="feature__card">
                <i class="ri-lightbulb-line feature__icon"></i>
                <h3>Innovation-Driven</h3>
                <p>Continuously updated software that incorporates the latest technological advancements in design and engineering.</p>
            </div>
            <div class="feature__card">
                <i class="ri-time-line feature__icon"></i>
                <h3>Efficiency Optimization</h3>
                <p>Streamline your workflow with powerful tools that reduce project completion time and improve accuracy.</p>
            </div>
            <div class="feature__card">
                <i class="ri-global-line feature__icon"></i>
                <h3>Industry Standard</h3>
                <p>Used by leading professionals worldwide, ensuring compatibility and recognition in the global market.</p>
            </div>
        </div>
    </div>
</section>

<section class="tutorials" style="padding: var(--section-spacing) 0; background-color: #f8fafc;">
    <div class="container">
        <h2 class="section__title">Software Tutorials</h2>
        <p class="section__description">Learn from expert-led video tutorials that will help you master architectural design software.</p>

        <div class="hero__image" style="max-width: 960px; margin: 0 auto;">
            <iframe width="1280" height="720" src="https://www.youtube.com/embed/Q4rbqUbhYXY" title="How to Make 3d Floor Plan in Blender" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
        </div>
    </div>
</section>

<section class="products" id="products">
    <div class="container">
        <h2 class="section__title">Our Architecture Software Catalog</h2>
        <div class="features__grid">
            <div class="feature__card">
                <img src="/Final/pictures/ArchiCAD.jpeg" alt="ArchiCAD">
                <h3>ArchiCAD 26</h3>
                <p>Professional architectural design software with advanced BIM capabilities</p>
                <p class="price">R49 000</p>
                <a href="/cart" class="btn btn--filled">Add to Cart</a>
            </div>
            <div class="feature__card">
                <img src="/Final/pictures/argus.png" alt="Argus">
                <h3>Argus VE</h3>
                <p>Comprehensive real estate valuation and investment analysis tool</p>
                <p class="price">R15 345</p>
                <a href="/cart" class="btn btn--filled">Add to Cart</a>
            </div>
            <div class="feature__card">
                <img src="/Final/pictures/lumion.png" alt="Lumion">
                <h3>Lumion Pro</h3>
                <p>3D rendering and visualization software for architects and designers</p>
                <p class="price">R67 909</p>
                <a href="/cart" class="btn btn--filled">Add to Cart</a>
            </div>
            <div class="feature__card">
                <img src="/Final/pictures/surpac.jpeg" alt="Surpac">
                <h3>Surpac Mining</h3>
                <p>Advanced geological and mine planning software for resource professionals</p>
                <p class="price">R44 898</p>
                <a href="/cart" class="btn btn--filled">Add to Cart</a>
            </div>
            <div class="feature__card">
                <img src="/Final/pictures/autodeskRevPic.jpg" alt="Autodesk Revit">
                <h3>Autodesk Revit</h3>
                <p>Building Information Modeling (BIM) software for architectural design</p>
                <p class="price">R35 620</p>
                <a href="/cart" class="btn btn--filled">Add to Cart</a>
            </div>
            <div class="feature__card">
                <img src="/Final/pictures/sketchup.png" alt="SketchUp">
                <h3>SketchUp Pro</h3>
                <p>3D modeling computer program for drawing applications</p>
                <p class="price">R22 750</p>
                <a href="/Final/pages/cart.html" class="btn btn--filled">Add to Cart</a>
            </div>
        </div>
    </div>
</section>